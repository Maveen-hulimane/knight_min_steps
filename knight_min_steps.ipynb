    "# The board is divided into red zone and green zone based on the location of the destination point\n",
    "# green zone is 2 points in all the direction from destination point\n",
    "\n",
    "\n",
    "def solution(src, dest):\n",
    "    if src==dest: # if destination is same as starting point\n",
    "        result=0\n",
    "    else:\n",
    "        a=[[j+(i*8) for j in range(8)] for i in range(8)] # to create a 8X8 grid form 0 to 63\n",
    "    #     print(a)\n",
    "\n",
    "        def find_pos(x,data): # function to find the position of a number in above grid\n",
    "            a=[(i,j) for i in range(8) for j in range(8) if data[i][j]==x]\n",
    "            return a[0]\n",
    "        \n",
    "        # function to find the distance bewteen current position to destination & direction\n",
    "        # to which the coin to move with respect to current position\n",
    "        # dirx=1 being N-E\n",
    "        # dirx=2 being S-E\n",
    "        # dirx=3 being S-W\n",
    "        # dirx=4 being N-W\n",
    "        \n",
    "        def diff_dir(s,e):             \n",
    "            diff = tuple(map((lambda x,y:x-y),e,s))\n",
    "            a=diff[0]\n",
    "            b=diff[1]\n",
    "            if (a<=0) and (b<=0):\n",
    "                dirx=4\n",
    "            elif (a>=0) and (b>=0):\n",
    "                dirx=2\n",
    "            elif (a>=0) and (b<=0):\n",
    "                dirx=3\n",
    "            else:\n",
    "                dirx=1\n",
    "            return diff,dirx\n",
    "        \n",
    "        # function to move the coin from present place i.e x by y-step \n",
    "        # here x is the position of coin, y is the distance form next position to present\n",
    "        \n",
    "        def move(x,y):#x-position of a point on the board to be moved y-step to take\n",
    "            return tuple(map((lambda x,y:x+y),x,y))\n",
    "        \n",
    "        dest_pos=find_pos(dest,a) # position of final point\n",
    "        src_pos=[find_pos(src,a),0,0] # here 1st element is the postion of coin, \n",
    "                                      # 2nd no of steps taken to reach present position\n",
    "                                      # 3rd if 0 did not reach the green zone id 1 reached the green zone\n",
    "        start=[src_pos]\n",
    "        # movement of the coin in the red zone\n",
    "        for i in start:\n",
    "            count=i[1]\n",
    "            diff,dirx=diff_dir(i[0],dest_pos)\n",
    "            if not(abs(diff[0])>2 or abs(diff[1])>2): # condition to check if the coin is in green zone\n",
    "                i[2]=1\n",
    "            while abs(diff[0])>2 or abs(diff[1])>2:   # condition to check if the coin is in red zone\n",
    "                if dirx==2:\n",
    "                    x1=move(i[0],(1,2))\n",
    "                    x2=move(i[0],(2,1))\n",
    "                    count+=1\n",
    "                    start.extend([[x1,count,0],[x2,count,0]])\n",
    "                    break\n",
    "                if dirx==1:\n",
    "                    x1=move(i[0],(-1,2))\n",
    "                    x2=move(i[0],(-2,1))\n",
    "                    count+=1\n",
    "                    start.extend([[x1,count,0],[x2,count,0]])\n",
    "                    break\n",
    "                if dirx==3:\n",
    "                    x1=move(i[0],(1,-2))\n",
    "                    x2=move(i[0],(2,-1))\n",
    "                    count+=1\n",
    "                    start.extend([[x1,count,0],[x2,count,0]])\n",
    "                    break\n",
    "                if dirx==4:\n",
    "                    x1=move(i[0],(-1,-2))\n",
    "                    x2=move(i[0],(-2,-1))\n",
    "                    count+=1\n",
    "                    start.extend([[x1,count,0],[x2,count,0]])\n",
    "                    break\n",
    "        \n",
    "        # movement of the coin in the red zone\n",
    "        for i in start:\n",
    "            while i[2]==1:\n",
    "                diff = list(map((lambda x,y:x-y),dest_pos,i[0]))\n",
    "                if abs(diff[0])==1 and abs(diff[1])==1:\n",
    "                    if dest_pos in [(0,0),(0,7),(7,7),(7,0)]:\n",
    "                        i[1]+=4\n",
    "                        break\n",
    "                    else:\n",
    "                        i[1]+=2\n",
    "                        break\n",
    "                elif abs(diff[0])==2 and abs(diff[1])==2:\n",
    "                    i[1]+=4\n",
    "                    break\n",
    "                elif (abs(diff[0])==2 and abs(diff[1])==1) or (abs(diff[0])==1 and abs(diff[1])==2):\n",
    "                    i[1]+=1\n",
    "                    break\n",
    "                elif (diff[0]==0 and abs(diff[1])==2) or (abs(diff[0])==2 and diff[1]==0):\n",
    "                    i[1]+=2\n",
    "                    break\n",
    "                elif (diff[0]==0 and abs(diff[1])==1) or (abs(diff[0])==1 and diff[1]==0):\n",
    "                    i[1]+=3\n",
    "                    break\n",
    "        temp=[]\n",
    "        for i in start:\n",
    "            while i[2]==1:\n",
    "                temp.append(i[1])\n",
    "                break\n",
    "        result=min(temp)\n",
    "        \n",
    "    return result\n",
    "        "
   ]
